.panel.panel-info(ng-if="!fn.editMode",ng-repeat="(key,obj) in showAssets")
    .panel-heading
        .row
            .col-sm-2
                h3.panel-title {{obj.assets.length}} Files in&nbsp;{{key}}
            .col-sm-4
                form
                    input.form-control(type="text",placeholder="filter",ng-model="search.$")
            .col-sm-4.dropdown(dropdown)
                button.btn.btn-success.dropdown-toggle.pull-right(dropdown-toggle)
                    i.fa.fa-plus &nbsp;ADD
                ul.dropdown-menu(role="menu")
                    li
                        nodeims-file-upload(onstart='upload.functions.onstart()',
                        onprogress='upload.functions.onprogress(percentDone)',
                        onerror='upload.functions.onerror(files, type, msg)',
                        ondone='upload.functions.ondone(files, data)')
                            | Upload Files
                    li
                        a.btn.btn-link.btn-block(ng-click="upload.functions.link()")
                            | Add a Link
                    li
                        a.btn.btn-link.btn-block(ng-click="upload.functions.configureGCalendar()")
                            | Add Calendar
            .col-sm-1
                a.btn.btn-link(ng-click='fn.edit()')
                    strong.text-muted EDIT
            .col-sm-1
                .btn-group-xs
                    a.btn.btn-link
                        em tagTo
                    a.btn.btn-link(ng-click="ngDropdown.clearCheckboxes()"): i.fa.fa-times


            //.col-sm-3.pull-right(ng-if="playlistState && showAssets['All']")
                div.pull-right(ng-dropdown-multiselect="",
                                options="ngDropdown.playlist.PlaylistTab.playlists",
                                selected-model="ngDropdown.playlist.selectedPlaylists",
                                events = "ngDropdown.playlist.events",
                                translation-texts="ngDropdown.playlist.customTexts",
                                extra-settings="ngDropdown.playlist.extraSettings",checkboxes="true")
            //.col-sm-3.pull-right(ng-if="playlistState && !showAssets['All']")
                //button.btn.btn-default.pull-right(ng-click="ngDropdown.removeFromPlaylist()"): small.text-danger RemoveFrom Playlist
                a.btn.btn-primary.pull-right(ui-sref="home.assets.playlistAddAssets({playlist:selected.playlist.name})",
                                                            ui-sref-opts="{reload: true, notify: true}") Add/Edit Playlist Assets
            //.col-sm-2.pull-right
                div.pull-right(ng-dropdown-multiselect="",
                                options="ngDropdown.label.Label.labels",
                                selected-model="ngDropdown.label.selectedLabels",
                                events = "ngDropdown.label.events",
                                translation-texts="ngDropdown.label.customTexts",
                                extra-settings="ngDropdown.label.extraSettings",checkboxes="true")

    ul.list-group(as-sortable="sortable.options",ng-model="obj.assets",style="min-height:50px;")
        li.list-group-item(ng-repeat='file in obj.assets | filter:labelFilter | filter:search track by $index',as-sortable-item,
                                ng-class='{"list-group-item-danger":file.deleted}', style="margin:0px;min-height:70px;" )
            .row(as-sortable-item-handle)
                .col-sm-2
                    a(ng-click='fn.showDetails(file.fileDetails.name)')
                        img.media-object.img-rounded(ng-src='{{file.fileDetails.thumbnail}}')
                        .letter-box.media-object.img-rounded(ng-if='!file.fileDetails.thumbnail')
                            | {{file.fileDetails.type.slice(0,1) || 'N'}}
                .col-sm-10
                    .row
                        .col-sm-6
                            p
                                | {{file.fileDetails.name }}
                                small(ng-if="playlistState && !showAssets['All']")
                                    | &nbsp;{{file.playlistDetails.side}} &nbsp;{{file.playlistDetails.bottom}}
                        //.col-sm-2
                            p {{file.fileDetails.size}}
                        .col-sm-3
                            p.text-muted(ng-if="file.fileDetails.resolution.width")
                                | {{file.fileDetails.resolution.width}}x{{file.fileDetails.resolution.height}}
                        .col-sm-2(ng-if="playlistState && !showAssets['All']")
                            p.text-muted  {{file.playlistDetails.duration}} seconds
                        .col-sm-1.pull-right
                            input(type="checkbox",name='checkbox',ng-model="file.selected",
                                    ng-if="!playlistState || showAssets['All']",ng-change="ngDropdown.checkbox(file)")

                    .row
                        .col-sm-6
                            p.text-muted {{file.fileDetails.labels.join(',')}}
                        .col-sm-5
                            p.text-muted {{file.fileDetails.type}},&nbsp;{{file.fileDetails.createdAt | date: 'MMM dd'}}

        h5.text-danger(ng-show="!obj.assets.length") &nbsp&nbsp Nothing to show, Please Add Assets using the `Add Asset` button

.panel.panel-danger(ng-if="fn.editMode")
    .panel-heading
        .panel-title Rename or delete files, tap Done when completed
            a.pull-right(ng-click='fn.edit()'):  strong.text-success  Done
    ul.list-group
        li.list-group-item(ng-repeat='name in names')
            form.row(name="editform")
                .form-group.col-xs-10(ng-class="editform.$dirty?'':fieldStatus")
                    .input-group.col-xs-12
                        input.form-control(type='text', ng-model='name.name')
                        span.input-group-addon(ng-bind="name.ext", ng-hide="editform.$dirty")
                        span.input-group-btn(ng-click='fn.rename($index)', ng-show="editform.$dirty")
                            a.btn.btn-success(type="button") SAVE
                .col-xs-2
                    button.btn.btn-danger.pull-right(ng-click='fn.delete($index)')
                        i.fa.fa-times.fa-lg
