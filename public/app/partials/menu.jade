nav.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                i.fa.fa-bars
            a.navbar-brand(href='http://pisignage.com', target="_self")
                img(src="app/img/pisignage-logo.png",height="32px")
        #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav(style="margin-left:20px;")
                li(ng-class="getClass('home.players')")
                    a(ui-sref="home.players") Players
                li(ng-class="getClass('home.assets')")
                    a(ui-sref="home.assets") Assets
            ul.nav.navbar-nav.navbar-right
                li
                    form.navbar-form
                        input.form-control(type="text",placeholder="Search",ng-model="search.$")
                li.dropdown(dropdown)
                    button.btn.btn-danger.dropdown-toggle.navbar-btn(dropdown-toggle)
                        i.fa.fa-plus &nbsp;Add Asset
                    ul.dropdown-menu(role="menu")
                        li
                            nodeims-file-upload(type='large',onstart='upload.started()',
                                                    onprogress='upload.progress(percentDone)',
                                                    onerror='upload.error(files, type, msg)',
                                                    ondone='upload.done(files, data)')
                                | Upload Files
                        li
                            a.btn.btn-link.btn-block(ng-click="linksPopUp()")
                                | Add a Link
                        li
                            a.btn.btn-link.btn-block(ng-click="configureGCalendar()", ng-hide="hideGcal")
                                | Add Calendar



.container.height100.overflow-hidden
    .row.height100.overflow-hidden
        .col-sm-3.height100.overflow-auto
            div(ui-view="left1", autoscroll="false")
            div(ui-view="left2", autoscroll="false")
        .col-sm-9.height100.overflow-auto
            div(ui-view="main1", autoscroll="false")
            div(ui-view="main2", autoscroll="false")
