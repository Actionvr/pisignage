.modal-header
    .row
        .col-xs-8
            h4(ng-show="link.obj.type != '.txt'",translate='translate') Stream From Internet
            h4(ng-show="link.obj.type == '.txt'",translate='translate') Add a Message
        .col-xs-4.pull-right
            button.btn.btn-success.btn-block(ng-disabled='Utubeform.$invalid',ng-click='link.save()',translate='translate') Save
.modal-body
    p.text-danger(ng-if="errorMessage") {{errorMessage}}
    form.form-horizontal(role='form',name='Utubeform')
        .form-group
            label.col-sm-4.control-label(translate='translate') File Name
            .col-sm-8
                input.form-control(type='text',name='linkname', ng-model='link.obj.name',placeholder="{{'Data will be saved in this file' | translate}}",required='')
        .form-group
            label.col-sm-4.control-label(translate='translate') File Type
            .col-sm-8
                select.form-control(ng-options='entry.ext as entry.name for entry in link.types',name='linktype', ng-model='link.obj.type', required='')
        .form-group(ng-if="link.obj.type == '.mrss'")
            label.col-sm-4.control-label(translate='translate') RSS Text
            .col-xs-8
                .radio-inline
                    label
                        input(type='radio',name='radio_none', ng-model='link.obj.hideTitle', value="none")
                        small(translate='translate') image
                .radio-inline
                    label
                        input(type='radio',name='radio_title', ng-model='link.obj.hideTitle', value="title")
                        small(translate='translate') image&title
                .radio-inline
                    label
                        input(type='radio',name='radio_description', ng-model='link.obj.hideTitle', value="description")
                        small(translate='translate') image&descr
                .radio-inline
                    label
                        input(type='radio',name='radio_title_noimg', ng-model='link.obj.hideTitle', value="onlytitle")
                        small(translate='translate') title
                .radio-inline
                    label
                        input(type='radio',name='radio_description_noimg', ng-model='link.obj.hideTitle', value="onlydescription")
                        small(translate='translate') descr

        .form-group(ng-if="link.obj.type == '.mrss'")
            label.control-label.col-sm-4.text-right(translate='translate') Number of Items
            .col-sm-2
                input.form-control(type='number',name='count',placeholder='{{"Number of Items to show" | translate}}',
                    ng-model='link.obj.numberOfItems')
        .form-group(ng-if="link.obj.type == '.mrss'")
            label.control-label.col-sm-4.text-right(translate='translate') Item duration (use playlist duration instead from 2.4.0)
            .col-sm-2
                input.form-control(type='number',name='duration',placeholder='{{"Duration of each feed item" | translate}}',
                ng-model='link.obj.duration')

        .form-group(ng-if="link.obj.type != '.txt'")
            label.col-sm-4.control-label(translate='translate') Link Address
            .col-sm-8
                input.form-control(ng-if="link.obj.type == '.local'",type='text',name='linkUrl', ng-model='link.obj.link',
                    placeholder="e.g. http(s)://site.com or rtsp://",required='')
                input.form-control(ng-if="link.obj.type != '.local'", type='text',name='linkUrl', ng-model='link.obj.link',
                    ng-pattern="/^(http(s?)|rtsp|udp|rtmp)\:\/\//",
                    placeholder="e.g. http(s)://site.com or rtsp://",required='')

        .form-group(ng-if="link.obj.type == '.weblink'")
            label.control-label.col-sm-4(translate='translate') Zoom level
            .col-sm-2
                input.form-control(type='number',step="0.01" ,name='style',placeholder='Leave blank for no-zoom',
                ng-model='link.obj.zoom')
        .form-group(ng-if="link.obj.type == '.txt' || link.obj.type == '.mrss'")
            label.col-sm-4.control-label(translate='translate') Optional CSS
            .col-sm-8
                input.form-control(type='text',name='style',placeholder='e.g. color:#eee; font-style:italic;',
                        ng-model='link.obj.style')

        .form-group(ng-if="link.obj.type == '.txt'")
            label.col-sm-4.control-label(translate='translate') Message
            .col-sm-8
                textarea.form-control( rows="4",cols="50",name='message', ng-model='link.obj.message', required='')

                

