.modal-header
    h3.text-warning {{msg.title}} Status    
.modal-body
    h4 {{msg.msg}}
    div(ng-if="msg.buttonText == 'Continue'")
        hr
        h5 Select Categories for the files
        categories(selected-labels="upload.selectedLabels", labels="upload.labels")
        form.form-inline
            .form-group
                label: small new
                input.form-control.input-sm(type="text", ng-model="newLabel.name",required)
            button.btn.btn-success.btn-xs(type="submit", ng-click="upload.addLabel()")
                i.fa.fa-plus
        div.text-danger(ng-if='msg.error', ng-bind="msg.error")
        h5(translate) Video Conversion
            form.form-inline.row
                .form-group.col-sm-8
                    select.form-control(ng-model="conversion.selected",
                        ng-change="setConversion(conversion.selected)",
                        ng-options="option.text for option in conversionOptions")
            br
            div.text-danger(style="margin-left: 10px;margin-top: -15px;", ng-if="conversion.msg", ng-bind="conversion.msg")

.modal-footer
    button.btn.btn-danger(ng-click='upload.abort()', ng-show="msg.buttonText == 'Uploading' ") Cancel
    button.btn.btn-warning(ng-click='upload.modalOk()', ng-bind="msg.buttonText", ng-disabled="msg.disable")





